# ==============================================================================
# AUTOMATION HUB - CONFIGURATION TEMPLATE
# ==============================================================================

# --- RUNTIME USER ---
# Local User ID and Group ID for file permissions
MY_ID=1000
MY_GID=1000

# --- NETWORK CONFIGURATION ---
# The FQDN where n8n will be accessible
N8N_HOST=automation.yourdomain.com
N8N_PORT=5678
N8N_PROTOCOL=https
# Full URL for Webhook reception (must match Reverse Proxy config)
WEBHOOK_URL=https://automation.yourdomain.com/
TZ=Europe/Madrid

# --- SYSTEM PATHS ---
# Local directory for persistent data storage
N8N_DATA_PATH=./n8n_data

# --- ERROR HANDLING ---
# Workflow ID for global error catching (leave empty if not configured)
ERROR_WORKFLOW_ID=your_global_error_handler_id

# --- DATABASE OPTIMIZATION (PRUNING) ---
# Prevents database bloating by automatically deleting old execution data
EXECUTIONS_DATA_PRUNE=true
EXECUTIONS_DATA_PRUNE_MAX_COUNT=50
EXECUTIONS_DATA_MAX_AGE=168
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=none
